# ==============================================
# E-Shipping Management System - Environment Variables Template
# คัดลอกไฟล์นี้เป็น .env และแก้ไขค่าตามความเหมาะสม
# ==============================================

# App Configuration
VITE_APP_NAME="E-Shipping Management"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Premium Food Ingredients Trading & Logistics"
VITE_APP_AUTHOR="JAGOTA"

# Environment
NODE_ENV=development
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_TOKEN_KEY=eshipping_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=eshipping_refresh_token
VITE_AUTH_TOKEN_EXPIRY=3600
VITE_SESSION_TIMEOUT=1800

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/eshipping_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=eshipping_db
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@eshipping.com
SMTP_FROM_NAME="E-Shipping Management"

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,gif,doc,docx,xls,xlsx
UPLOAD_DIR=./uploads
STATIC_FILES_URL=http://localhost:3001/static

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=eshipping-documents
AWS_S3_URL=https://eshipping-documents.s3.amazonaws.com

# Google Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Payment Gateway (Optional)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Shipping Providers
DHL_API_KEY=your-dhl-api-key
DHL_API_SECRET=your-dhl-secret
DHL_SANDBOX=true

FEDEX_API_KEY=your-fedex-api-key
FEDEX_SECRET_KEY=your-fedex-secret
FEDEX_SANDBOX=true

UPS_API_KEY=your-ups-api-key
UPS_SECRET=your-ups-secret
UPS_SANDBOX=true

THAILAND_POST_API_KEY=your-thailand-post-api-key

# Security
JWT_SECRET=change-this-to-a-random-secret-key
JWT_REFRESH_SECRET=change-this-to-another-random-key
ENCRYPTION_KEY=change-this-to-32-character-key
BCRYPT_ROUNDS=12

# Development
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=true
VITE_MOCK_API=false

# Features
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_EXPORT=true

# Localization
VITE_DEFAULT_LANGUAGE=th
VITE_SUPPORTED_LANGUAGES=th,en
VITE_DEFAULT_TIMEZONE=Asia/Bangkok
VITE_DEFAULT_CURRENCY=THB

# Company Info
VITE_COMPANY_NAME="JAGOTA Trading Co., Ltd."
VITE_COMPANY_ADDRESS="123 Business District, Bangkok 10110, Thailand"
VITE_COMPANY_PHONE="+66-2-xxx-xxxx"
VITE_COMPANY_EMAIL="info@jagota.com"
