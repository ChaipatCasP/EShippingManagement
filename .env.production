# ==============================================
# E-Shipping Management System - Production Environment
# ==============================================

# App Configuration
VITE_APP_NAME="E-Shipping Management"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Premium Food Ingredients Trading & Logistics"
VITE_APP_AUTHOR="JAGOTA"

# Environment
NODE_ENV=production
VITE_APP_ENV=production

# API Configuration
VITE_API_BASE_URL=https://api.eshipping.jagota.com/api
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_TOKEN_KEY=eshipping_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=eshipping_refresh_token
VITE_AUTH_TOKEN_EXPIRY=3600
VITE_SESSION_TIMEOUT=1800

# Database (Production)
DATABASE_URL=postgresql://prod_user:secure_password@prod-db.amazonaws.com:5432/eshipping_prod
DATABASE_HOST=prod-db.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=eshipping_prod
DATABASE_USER=prod_user
DATABASE_PASSWORD=secure_production_password

# Redis (Production)
REDIS_URL=redis://prod-redis.amazonaws.com:6379
REDIS_HOST=prod-redis.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# Email Service (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASSWORD=SG.production_sendgrid_api_key
SMTP_FROM_EMAIL=noreply@eshipping.jagota.com
SMTP_FROM_NAME="E-Shipping Management"

# File Upload (Production)
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,gif,doc,docx,xls,xlsx
UPLOAD_DIR=/var/uploads
STATIC_FILES_URL=https://cdn.eshipping.jagota.com

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=AKIA_PRODUCTION_KEY
AWS_SECRET_ACCESS_KEY=production_secret_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=eshipping-prod-documents
AWS_S3_URL=https://eshipping-prod-documents.s3.ap-southeast-1.amazonaws.com

# Google Services (Production)
GOOGLE_MAPS_API_KEY=production_google_maps_key
GOOGLE_ANALYTICS_ID=G-PRODUCTION_ID

# Payment Gateway (Production)
STRIPE_PUBLISHABLE_KEY=pk_live_production_stripe_key
STRIPE_SECRET_KEY=sk_live_production_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_production_webhook_secret

# Shipping Providers (Production)
DHL_API_KEY=production_dhl_api_key
DHL_API_SECRET=production_dhl_secret
DHL_SANDBOX=false

FEDEX_API_KEY=production_fedex_api_key
FEDEX_SECRET_KEY=production_fedex_secret
FEDEX_SANDBOX=false

UPS_API_KEY=production_ups_api_key
UPS_SECRET=production_ups_secret
UPS_SANDBOX=false

THAILAND_POST_API_KEY=production_thailand_post_key

# Security (Production)
JWT_SECRET=super_secure_production_jwt_secret_key_64_characters_long
JWT_REFRESH_SECRET=super_secure_production_refresh_secret_key_64_chars
ENCRYPTION_KEY=secure_32_character_prod_key_here
BCRYPT_ROUNDS=14

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging (Production)
LOG_LEVEL=warn
LOG_FILE_PATH=/var/log/eshipping/app.log
LOG_MAX_FILES=30
LOG_MAX_SIZE=50m

# Monitoring (Production)
SENTRY_DSN=https://production_sentry_dsn@sentry.io/project
NEW_RELIC_LICENSE_KEY=production_newrelic_license

# Development Tools (Disabled in Production)
VITE_DEV_TOOLS=false
VITE_DEBUG_MODE=false
VITE_MOCK_API=false

# Feature Flags (Production)
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_EXPORT=true
VITE_FEATURE_BULK_OPERATIONS=true
VITE_FEATURE_ADVANCED_FILTERS=true

# Localization
VITE_DEFAULT_LANGUAGE=th
VITE_SUPPORTED_LANGUAGES=th,en
VITE_DEFAULT_TIMEZONE=Asia/Bangkok
VITE_DEFAULT_CURRENCY=THB

# Company Information
VITE_COMPANY_NAME="JAGOTA Trading Co., Ltd."
VITE_COMPANY_ADDRESS="123 Business District, Bangkok 10110, Thailand"
VITE_COMPANY_PHONE="+66-2-xxx-xxxx"
VITE_COMPANY_EMAIL="info@jagota.com"
VITE_COMPANY_WEBSITE="https://jagota.com"

# Cache Configuration (Production)
CACHE_TTL=7200
CACHE_MAX_SIZE=5000

# Backup Configuration (Production)
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=eshipping-prod-backups
